<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ZHotelMenuAndOrder</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <!-- Template CSS -->
    <link rel="stylesheet" type="text/css" href="~/userLayout/css/bootstrap.css" />
    <link href="~/userLayout/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/userLayout/css/style.css" rel="stylesheet" />
    <link href="~/userLayout/css/responsive.css" rel="stylesheet" />

    <style>
        html {
            position: relative;
            min-height: 100%;
        }

        body {
            display: flex;
            flex-direction: column;
            min-height: 100vh;
            margin: 0;
            padding-bottom: 250px; /* Space for footer */
        }

        .content-wrapper {
            flex: 1;
        }

        footer {
            position: absolute;
            bottom: 0;
            width: 100%;
            height: 260px; /* Increased footer height */
            background-color: #343a40;
            color: white;
        }

        /* Ensure content doesn't get hidden */
        .food_section {
            padding-bottom: 50px;
        }
    </style>
</head>

<body>
    <div class="content-wrapper">
        <header>
            <nav class="navbar bg-dark border-body navbar navbar-expand-sm navbar-toggleable-sm border-bottom box-shadow mb-3 py-4">
                <div class="container-fluid">
                    <a class="navbar-brand text-light fs-2" asp-area="" asp-controller="Home" asp-action="Index">ZHotelMenuAndOrder</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="fa fa-bars text-light"></span>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                            </li>
                            @if (User.Identity.IsAuthenticated)
                            {
                                <li class="nav-item"></li>
                            }
                            @if (User.IsInRole("Admin"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-light" asp-area="" asp-controller="Products" asp-action="Index">Products</a>
                                </li>
                                
                                <li class="nav-item">
                                    <a class="nav-link text-light" asp-area="" asp-controller="Users" asp-action="Index">Users</a>
                                </li>
                            }
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-area="" asp-controller="Orders" asp-action="Index">order now</a>
                            </li>
                        </ul>
                        <a asp-controller="Carts" asp-action="Index" class="user_link px-2 font-weight-bold fs-5">
                            <i class="fa fa-cart-plus text-light" aria-hidden="true"></i>
                        </a>
                        <partial name="_LoginPartial" />
                    </div>
                </div>
            </nav>
        </header>

        <div class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    </div>

    <footer class="footer_section">
        <div class="container">
            <div class="row">
                <div class="col-md-4 footer-col">
                    <div class="footer_contact">
                        <h4>Contact Us</h4>
                        <div class="contact_link_box">
                            <a href="">
                                <i class="fa fa-map-marker" aria-hidden="true"></i>
                                <span>TuluAwlia, Ethiopia</span>
                            </a>
                            <a href="">
                                <i class="fa fa-phone" aria-hidden="true"></i>
                                <span>Call +251 912345678</span>
                            </a>
                            <a href="">
                                <i class="fa fa-envelope" aria-hidden="true"></i>
                                <span>temu54321@gmail.com</span>
                            </a>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 footer-col">
                    <div class="footer_detail">
                        <a href="" class="footer-logo">Z Hotel</a>
                        <p>You can order from wherever you are</p>
                        <div class="footer_social">
                            <a href=""><i class="fa fa-facebook" aria-hidden="true"></i></a>
                            <a href=""><i class="fa fa-twitter" aria-hidden="true"></i></a>
                            <a href=""><i class="fa fa-linkedin" aria-hidden="true"></i></a>
                            <a href=""><i class="fa fa-instagram" aria-hidden="true"></i></a>
                            <a href=""><i class="fa fa-pinterest" aria-hidden="true"></i></a>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 footer-col">
                    <div class="footer_hours">
                        <h4>Opening Hours</h4>
                        <p>Monday - Friday: 8:00 AM - 10:00 PM</p>
                        <p>Saturday - Sunday: 9:00 AM - 11:00 PM</p>
                    </div>
                    <p class="mb-0 text-center">&copy; @DateTime.Now.Year - ZHotelMenuAndOrder. All rights reserved.</p>
                </div>
                
            </div>
            
        </div>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <!-- Template Scripts -->
    <script src="~/userLayout/js/bootstrap.js"></script>
    <script src="~/userLayout/js/custom.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>